---
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  canonicalURL?: string;
  ogImage?: string;
  ogType?: string;
  schema?: Record<string, unknown>;
}

const props = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <SEO {...props} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  *, *::before, *::after {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
      Ubuntu, Cantarell, 'Helvetica Neue', sans-serif;
    color: #111;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
  }

  main {
    min-height: 60vh;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  a {
    color: #2563eb;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section {
    padding: 4rem 1.5rem;
  }

  .section-inner {
    max-width: 1100px;
    margin: 0 auto;
  }

  h1, h2, h3 {
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .btn {
    display: inline-block;
    background: #111;
    color: #fff;
    padding: 0.75rem 1.75rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: background 0.15s;
  }

  .btn:hover {
    background: #333;
    color: #fff;
  }

  .btn-lg {
    padding: 1rem 2.25rem;
    font-size: 1.1rem;
  }
</style>
