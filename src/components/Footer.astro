---
const year = new Date().getFullYear();

const links = [
  { href: '/', label: 'Inicio' },
  { href: '/retiro-ia-galicia/', label: 'El retiro' },
  { href: '/para-quien/', label: 'Para quién' },
  { href: '/blog/', label: 'Blog' },
  { href: '/faq/', label: 'FAQ' },
  { href: '/sobre-nosotros/', label: 'Sobre nosotros' },
];

const legalLinks = [
  { href: '/legal/', label: 'Aviso legal' },
  { href: '/legal/#privacidad', label: 'Privacidad' },
];
---

<footer class="footer">
  <div class="footer-inner">
    <p class="footer-brand">
      <span class="footer-logo">Rural <strong>IA</strong></span>
      <span class="footer-sep">—</span>
      Retiro inmersivo de IA en Galicia.
    </p>

    <nav class="footer-nav" aria-label="Footer">
      {links.map(({ href, label }) => (
        <a href={href}>{label}</a>
      ))}
    </nav>

    <nav class="footer-legal" aria-label="Legal">
      {legalLinks.map(({ href, label }) => (
        <a href={href}>{label}</a>
      ))}
    </nav>

    <div class="footer-social">
      <a href="mailto:hola@ruralia.gal">hola@ruralia.gal</a>
    </div>

    <p class="footer-copy">&copy; {year} Rural IA</p>
  </div>
</footer>

<style>
  .footer {
    background: var(--verde-oscuro-noche, #1A3A2A);
    color: rgba(245, 240, 232, 0.7);
    padding: 4rem 1.5rem 2.5rem;
    text-align: center;
    margin-top: 0;
  }
  .footer-inner {
    max-width: var(--content-width, 800px);
    margin: 0 auto;
  }
  .footer-brand {
    font-size: 1rem;
    margin: 0 0 2rem;
    color: rgba(245, 240, 232, 0.7);
  }
  .footer-logo {
    font-family: var(--font-heading, 'Inter', sans-serif);
    color: #fff;
    font-size: 1.15rem;
    letter-spacing: -0.04em;
    font-weight: 600;
  }
  .footer-sep {
    margin: 0 0.5rem;
    opacity: 0.4;
  }
  .footer-nav {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem 1.5rem;
    margin-bottom: 1.25rem;
  }
  .footer-nav a {
    color: rgba(245, 240, 232, 0.6);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.15s;
  }
  .footer-nav a:hover {
    color: #fff;
  }
  .footer-legal {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1.25rem;
  }
  .footer-legal a {
    color: rgba(245, 240, 232, 0.4);
    text-decoration: none;
    font-size: 0.8rem;
    transition: color 0.15s;
  }
  .footer-legal a:hover {
    color: rgba(245, 240, 232, 0.7);
  }
  .footer-social {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    font-size: 0.85rem;
  }
  .footer-social a {
    color: rgba(245, 240, 232, 0.5);
    text-decoration: none;
    transition: color 0.15s;
  }
  .footer-social a:hover {
    color: #fff;
  }
  .dot {
    color: rgba(245, 240, 232, 0.25);
  }
  .footer-copy {
    font-size: 0.8rem;
    color: rgba(245, 240, 232, 0.3);
    margin: 0;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(245, 240, 232, 0.1);
  }
</style>
