---
import { Image } from 'astro:assets';
import logo from '../assets/images/rural-ia-logo-crop-removebg.png';

const currentPath = Astro.url.pathname;

const nav = [
  { href: '/retiro-ia-galicia/', label: 'El retiro' },
  { href: '/para-quien/', label: 'Para quién' },
  { href: '/blog/', label: 'Blog' },
  { href: '/faq/', label: 'FAQ' },
];
---

<header class="header">
  <div class="header-inner">
    <a href="/" class="logo">
      <Image src={logo} alt="Rural IA" height={32} />
    </a>
    <nav>
      {nav.map(({ href, label }) => (
        <a href={href} class:list={[{ active: currentPath === href }]}>{label}</a>
      ))}
      <a href="/retiro-ia-galicia/#reservar" class="cta-nav">Reservar</a>
    </nav>
    <button class="menu-toggle" aria-label="Abrir menú" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

<style>
  .header {
    padding: 1.25rem 1.5rem;
    background: transparent;
  }
  .header-inner {
    max-width: var(--wide-width, 1100px);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }
  .logo img {
    height: 32px;
    width: auto;
  }
  nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  nav a {
    text-decoration: none;
    color: var(--marron-claro, #8B7355);
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.15s ease;
  }
  nav a:hover,
  nav a.active {
    color: var(--verde-bosque, #2D5A3D);
  }
  .cta-nav {
    background: var(--verde-bosque, #2D5A3D) !important;
    color: #fff !important;
    padding: 0.5rem 1.25rem;
    border-radius: 8px;
    font-weight: 600 !important;
    font-size: 0.9rem;
  }
  .cta-nav:hover {
    background: var(--verde-musgo, #4A7C59) !important;
  }

  /* Mobile toggle */
  .menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
  }
  .menu-toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--marron-tierra, #5C4A3A);
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: flex;
    }
    nav {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--crema-calido, #F5F0E8);
      flex-direction: column;
      padding: 1.5rem;
      gap: 1rem;
      border-bottom: 1px solid rgba(107, 155, 122, 0.2);
      z-index: 50;
    }
    nav.open {
      display: flex;
    }
    .header-inner {
      position: relative;
    }
  }
</style>

<script>
  const toggle = document.querySelector('.menu-toggle');
  const nav = document.querySelector('.header nav');
  if (toggle && nav) {
    toggle.addEventListener('click', () => {
      const expanded = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!expanded));
      nav.classList.toggle('open');
    });
  }
</script>
