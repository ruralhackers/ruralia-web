---
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  canonicalURL?: string;
  ogImage?: string;
  ogType?: string;
  schema?: Record<string, unknown> | Record<string, unknown>[];
  keywords?: string[];
  date?: string;
  author?: string;
  robots?: string;
  ogImageAlt?: string;
}

const props = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#2D5A3D" />

    <SEO {...props} />
    <link rel="alternate" type="application/rss+xml" title="Rural IA — Blog" href="/rss.xml" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  /* ===== Font: Inter — self-hosted variable font ===== */
  @font-face {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400 800;
    font-display: swap;
    src: url('/fonts/inter/Inter-latin-ext.woff2') format('woff2');
    unicode-range: U+0100-02BA, U+02BD-02C5, U+02C7-02CC, U+02CE-02D7, U+02DD-02FF, U+0304, U+0308, U+0329, U+1D00-1DBF, U+1E00-1E9F, U+1EF2-1EFF, U+2020, U+20A0-20AB, U+20AD-20C0, U+2113, U+2C60-2C7F, U+A720-A7FF;
  }
  @font-face {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400 800;
    font-display: swap;
    src: url('/fonts/inter/Inter-latin.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  /* ===== Reset ===== */
  *, *::before, *::after {
    box-sizing: border-box;
  }

  /* ===== Design tokens ===== */
  :root {
    /* Palette */
    --verde-bosque: #2D5A3D;
    --verde-musgo: #4A7C59;
    --verde-hoja: #6B9B7A;
    --crema-calido: #F5F0E8;
    --blanco-niebla: #FAFAF7;
    --marron-tierra: #5C4A3A;
    --marron-claro: #8B7355;
    --dorado-sol: #D4A843;
    --gris-lluvia: #9CA3AF;
    --verde-oscuro-noche: #1A3A2A;

    /* Semantic */
    --color-text: var(--marron-tierra);
    --color-text-secondary: var(--marron-claro);
    --color-text-tertiary: var(--gris-lluvia);
    --color-heading: var(--verde-bosque);
    --color-bg-primary: var(--crema-calido);
    --color-bg-alt: var(--blanco-niebla);
    --color-accent: var(--dorado-sol);
    --color-link: var(--verde-bosque);

    /* Typography — single geometric sans, like Vercel/Apple */
    --font-heading: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-body: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;

    /* Spacing */
    --section-gap: 100px;
    --content-width: 800px;
    --wide-width: 1100px;
  }

  /* ===== Base ===== */
  body {
    margin: 0;
    font-family: var(--font-body);
    color: var(--color-text);
    line-height: 1.7;
    background: var(--color-bg-primary);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  main {
    min-height: 60vh;
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  /* ===== Typography — tight, geometric, linear ===== */
  h1, h2, h3, h4 {
    font-family: var(--font-heading);
    color: var(--color-heading);
    line-height: 1.15;
    letter-spacing: -0.04em;
    font-weight: 700;
  }

  h1 {
    font-size: clamp(2.5rem, 5.5vw, 3.75rem);
    letter-spacing: -0.05em;
    font-weight: 800;
  }

  h2 {
    font-size: clamp(1.85rem, 4vw, 2.75rem);
    letter-spacing: -0.04em;
  }

  h3 {
    font-size: clamp(1.15rem, 2vw, 1.35rem);
    letter-spacing: -0.03em;
    font-weight: 600;
  }

  p {
    margin: 0 0 1rem;
    font-size: 1.1rem;
  }

  /* ===== Links ===== */
  a {
    color: var(--color-link);
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    transition: color 0.15s ease;
  }

  a:hover {
    color: var(--verde-musgo);
  }

  /* ===== Sections ===== */
  .section {
    padding: var(--section-gap) 1.5rem;
  }

  .section-inner {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .section-wide {
    max-width: var(--wide-width);
    margin: 0 auto;
  }

  /* Background variants */
  .bg-crema { background: var(--crema-calido); }
  .bg-niebla { background: var(--blanco-niebla); }
  .bg-dark {
    background: var(--verde-oscuro-noche);
    color: var(--crema-calido);
  }
  .bg-dark h2, .bg-dark h3 {
    color: #fff;
  }
  .bg-dark p {
    color: rgba(245, 240, 232, 0.85);
  }

  /* ===== Buttons ===== */
  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    font-family: var(--font-body);
    transition: all 0.2s ease;
    cursor: pointer;
    border: none;
  }

  .btn-primary {
    background: var(--verde-bosque);
    color: #fff;
  }
  .btn-primary:hover {
    background: var(--verde-musgo);
    color: #fff;
  }

  .btn-gold {
    background: var(--dorado-sol);
    color: var(--verde-oscuro-noche);
  }
  .btn-gold:hover {
    background: #c49a38;
    color: var(--verde-oscuro-noche);
  }

  .btn-lg {
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
  }

  /* ===== Utility ===== */
  .text-center { text-align: center; }
  .text-secondary { color: var(--color-text-secondary); }
  .text-small { font-size: 0.9rem; }

  /* ===== Responsive ===== */
  @media (max-width: 768px) {
    :root {
      --section-gap: 64px;
    }
  }
</style>
