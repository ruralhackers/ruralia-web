  .hero-retiro {
    padding-top: 5rem;
    padding-bottom: 4rem;
  }
  .hero-retiro h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    max-width: 700px;
    margin: 0 auto 1.5rem;
  }
  .hero-sub {
    font-size: 1.15rem;
    color: var(--color-text-secondary);
    max-width: 580px;
    margin: 0 auto 2rem;
    line-height: 1.7;
  }
  .hero-price {
    color: var(--marron-claro);
    font-size: 0.95rem;
    margin-top: 1rem;
  }

  /* ===== Problema/solución ===== */
  .highlight-text {
    font-family: var(--font-heading);
    font-size: clamp(1.2rem, 2.5vw, 1.5rem);
    color: var(--verde-bosque);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.4;
    margin-top: 1.5rem;
    margin-bottom: 0;
  }

  .key-facts {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  .fact-full {
    grid-column: 1 / -1;
  }
  .fact {
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
  }
  .fact strong {
    display: block;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #888;
    margin-bottom: 0.25rem;
  }

  .alt { background: #f8f9fa; }

  .day-detail {
    margin-bottom: 2rem;
  }
  .day-detail h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }
  .day-detail p {
    color: #555;
  }

  .schedule {
    max-width: 600px;
  }
  .schedule-row {
    display: flex;
    gap: 1.5rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid #e5e7eb;
  }
  .time {
    font-weight: 600;
    min-width: 130px;
    color: #555;
    font-size: 0.9rem;
  }

  .includes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 1rem;
  }
  .include-item {
    background: #fff;
    padding: 1.25rem;
    border-radius: 8px;
  }
  .include-item strong {
    display: block;
    margin-bottom: 0.25rem;
  }
  .include-item p {
    color: #666;
    font-size: 0.9rem;
    margin: 0;
  }

  .pricing-section { text-align: center; }
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 650px;
    margin: 2rem auto;
  }
  .price-card {
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
  }
  .price-card.featured {
    border-color: #111;
    box-shadow: 0 4px 24px rgba(0,0,0,0.08);
  }
  .price-badge {
    display: block;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #888;
    margin-bottom: 0.5rem;
  }
  .price-amount {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: -0.03em;
    margin-bottom: 0.25rem;
  }
  .price-note {
    display: block;
    color: #888;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }
  .price-card ul {
    text-align: left;
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
  }
  .price-card li {
    padding: 0.3rem 0;
    color: #555;
    font-size: 0.9rem;
  }
  .price-card li::before {
    content: '✓ ';
    color: #22c55e;
    font-weight: 600;
  }
  .pricing-note {
    max-width: 600px;
    margin: 1rem auto 0;
    font-size: 0.9rem;
    color: #888;
  }

  /* ===== Team inline ===== */
  .team-inline {
    margin-top: 1.5rem;
  }
  .team-inline p {
    font-size: 0.95rem;
    color: #555;
    margin-bottom: 0.4rem;
  }

  /* ===== FAQ inline ===== */
  .faq-inline {
    max-width: 650px;
  }
  .faq-inline details {
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem 0;
  }
  .faq-inline summary {
    font-weight: 600;
    font-size: 1.05rem;
    cursor: pointer;
    color: var(--color-heading);
    list-style: none;
  }
  .faq-inline summary::-webkit-details-marker {
    display: none;
  }
  .faq-inline summary::before {
    content: '+ ';
    color: var(--verde-musgo);
    font-weight: 700;
  }
  .faq-inline details[open] summary::before {
    content: '− ';
  }
  .faq-inline p {
    margin: 0.75rem 0 0;
    color: #555;
    font-size: 0.95rem;
    padding-left: 1.1rem;
  }
  .faq-more {
    margin-top: 1rem;
  }
  .faq-more a {
    font-weight: 500;
    font-size: 0.95rem;
    text-decoration: none;
  }
  .faq-more a:hover {
    text-decoration: underline;
  }

  /* ===== Waitlist form ===== */
  .form-section {
    text-align: center;
    max-width: 480px;
  }
  .form-subtitle {
    color: #666;
    margin-bottom: 2rem;
  }
  .waitlist-form {
    text-align: left;
  }
  .hidden-field {
    display: none;
  }
  .form-group {
    margin-bottom: 1.25rem;
  }
  .form-group label {
    display: block;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--marron-tierra);
    margin-bottom: 0.4rem;
  }
  .form-group input,
  .form-group select {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    font-family: var(--font-body);
    border: 1px solid #d1d5db;
    border-radius: 8px;
    background: #fff;
    color: var(--marron-tierra);
    transition: border-color 0.15s ease;
  }
  .form-group input:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--verde-musgo);
    box-shadow: 0 0 0 3px rgba(74, 124, 89, 0.1);
  }
  .form-group input::placeholder {
    color: #9ca3af;
  }
  .form-group textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    font-family: var(--font-body);
    border: 1px solid #d1d5db;
    border-radius: 8px;
    background: #fff;
    color: var(--marron-tierra);
    transition: border-color 0.15s ease;
    resize: vertical;
  }
  .form-group textarea:focus {
    outline: none;
    border-color: var(--verde-musgo);
    box-shadow: 0 0 0 3px rgba(74, 124, 89, 0.1);
