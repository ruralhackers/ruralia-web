    padding-top: 5rem;
    padding-bottom: 4rem;
  }
  .hero-retiro h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    max-width: 700px;
    margin: 0 auto 1.5rem;
  }
  .hero-sub {
    font-size: 1.15rem;
    color: var(--color-text-secondary);
    max-width: 580px;
    margin: 0 auto 2rem;
    line-height: 1.7;
  }
  .hero-price {
    color: var(--marron-claro);
    font-size: 0.95rem;
    margin-top: 1rem;
  }

  /* ===== Problema/solución ===== */
  .highlight-text {
    font-family: var(--font-heading);
    font-size: clamp(1.2rem, 2.5vw, 1.5rem);
    color: var(--verde-bosque);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.4;
    margin-top: 1.5rem;
    margin-bottom: 0;
  }

  .key-facts {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
