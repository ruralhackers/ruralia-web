  }
  .include-item p {
    color: #666;
    font-size: 0.9rem;
    margin: 0;
  }

  .pricing-section { text-align: center; }
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 650px;
    margin: 2rem auto;
  }
  .price-card {
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
  }
  .price-card.featured {
    border-color: #111;
    box-shadow: 0 4px 24px rgba(0,0,0,0.08);
  }
  .price-badge {
    display: block;
